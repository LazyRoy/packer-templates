  "post-processors": [
    {
      "output": "./vyos-{{user `product_version`}}-amd64_{{.Provider}}.box",
      "type": "vagrant"
    },
    {
      "type": "atlas",
      "only": ["vmware-iso"],
      "artifact": "{{user `artifact_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "vmware_desktop",
        "artifact_version": "{{user `version`}}",
        "created_at": "{{timestamp}}"
      }
    },
    {
      "type": "atlas",
      "only": ["virtualbox-iso"],
      "artifact": "{{user `artifact_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "artifact_version": "{{user `version`}}",
        "created_at": "{{timestamp}}"
